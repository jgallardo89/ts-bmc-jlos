	<!-- Flujo a consola -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{dd-MM-yy HH:mm:ss:mmm} LOG] [%c] %-5p - %m%n" />
		</layout>
	</appender>

	<!-- Categorias - Loggers -->

	<!-- -->
