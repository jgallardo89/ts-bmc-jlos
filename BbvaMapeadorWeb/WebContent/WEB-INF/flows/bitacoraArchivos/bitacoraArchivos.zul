<?xml version="1.0" encoding="UTF-8"?>
<?page title="Bit치cora Archivos" contentType="text/html;charset=UTF-8"?>
<?meta http-equiv="X-UA-Compatible" content="IE=9; IE=8; IE=7"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<zk>
	<window border="0" width="100%" height="100%"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('mx.com.bbva.mapeador.ui.commons.viewmodel.bitacioraarchivo.BitacoraArchivoController')"
		id="bitacoraWebWindows">
		<include src="../../pages/styles.zul" />
		<div sclass="BODY" height="100%"  width="100%">
			<groupbox height="100%">
				<caption sclass="pageTitle" label="Bit치cora > Archivos"></caption>		
					<portallayout maximizedMode="whole" id="portalLayoutBitacira"
					width="100%" height="100%">
					<portalchildren>
						<panel height="20%" width="100%" sclass="sectionPanelTitle" id="datosBitacira"
							title="Bit치cora" collapsible="true" style="margin-bottom:10px"
							border="normal">
							<caption sclass="sectionPanelTitle" label="Bit치cora Archivos"></caption>
							<panelchildren>
								<div align="center">
									<grid width="100%" style="border:0" oddRowSclass="row2">
										<columns>
											<column width="20%" />
											<column width="25%" />
											<column width="20%" />
											<column width="25%" />
										</columns>
										<rows>
											<row sclass="row2">
												<div align="right">
													<label id="lblFechaInicio" width="100%" sclass="labelFill" value="Fecha inicio:  "></label>												
												</div>
												<datebox height="20px" value="@load(vm.bitacoraArchivoDTO.bitacoraArchivoVO.fechaInicio) @converter('formatedDate', format='dd/MM/yyyy')" maxlength="50" width="100%" id="fechaInicio" readonly="true" buttonVisible="true" onCreate="self.value = new Date()" format="dd/MM/yyyy"></datebox>
												<div align="right">
													<label id="lblFechaFin" width="100%" sclass="labelFill" value="Fecha fin: "></label>												
												</div>
												<datebox height="20px" value="@load(vm.bitacoraArchivoDTO.bitacoraArchivoVO.fechaFin) @converter('formatedDate', format='dd/MM/yyyy')" maxlength="50" width="100%" id="fechaFin" readonly="true" buttonVisible="true" onCreate="self.value = new Date()" format="dd/MM/yyyy"></datebox>																												
											</row>
											<row sclass="row2">
												<div align="right">
													<label id="lblEstadoArchivo" width="100%" sclass="labelFill" value="Estado Archivo:  "></label>
												</div>
												<combobox readonly="false" onChange="selectedValueEventoMapeador()"
													id="eventoMapeador" width="70%" model="@load(vm.bitacoraArchivoDTO.eventoMapeadorVOs)" autodrop="true">		
													<template name="model">										
														<comboitem value="@load(each.idEventoMapeador)" label="@load(each.nombreEventoMapeador)" height="100%"/>
													</template>																								
												</combobox>
												<div align="right">
													<label id="lblNombreArchivo" width="100%" sclass="labelFill" value="Nombre de Archivo:  "></label>
												</div>
												<textbox sclass="textboxUpperCase" maxlength="50"
													id="nombreArchivo" value="@load(vm.strNombreArchivo)" width="100%"></textbox>																									
											</row>
											<row sclass="row2">
												<div align="right" width="70%">
													<image id="reporteExcelBtn" src="/img/xls.png" onClick="@command('onShowReport',type='xls')" />
													<image id="reporteCsvBtn" src="/img/csv.png" onClick="@command('onShowReport',type='csv')" />
												</div>
												<div align="right" width="82%">
													<button sclass="button" image="/img/search.png" label="Consultar" id="consultarBtn" onClick="@command('readWithFilters')"></button>
												</div>
												<div align="right">
												</div>
												<div align="right">
												</div>
											</row>
										</rows>								
									</grid>
								</div>
							</panelchildren>										
						</panel>
					</portalchildren>
					<portalchildren width="100%" style="padding: 5px">
						<panel height="77%" sclass="sectionPanelTitle" width="100%" id="panelbitacoraArchivo"
							title="Resultados Bitacora Archivo" collapsible="true"
							style="margin-bottom:10px">
							<caption sclass="sectionPanelTitle" label="Lista de Archivos"></caption>
							<panelchildren>
								<grid width="99.7%" id="bitacoraArchivoGrid" mold="paging"
									model="@load(vm.bitacoraArchivoVOs)" pagingPosition="both" pageSize="12"
									vflex="true" height="100%">									
									<columns sizable="true" menupopup="auto">
										<column hflex="1" label="Fecha y Hora" width="10%"
											sort="auto(fechaBitacora)"></column>
										<column hflex="1" label="Archivo" width="10%"
											sort="auto(nombreBitacora)"></column>
										<column hflex="1" label="Estado de archivo" width="10%"
											sort="auto(nombreEventoMapeador)"></column>		
									</columns>
									<template name="model">
										<row>
											<label hflex="1" value="@load(each.fechaBitacora) @converter('formatedDate', format='dd/MM/yyyy')"></label>
											<label hflex="1" value="@load(each.nombreBitacora)"></label>
											<label hflex="1" value="@load(each.nombreEventoMapeador)"></label>																					
										</row>
									</template>									
								</grid>
							</panelchildren>
						</panel>
					</portalchildren>
				</portallayout>								
			</groupbox>	
			<textbox id="idEventoMapeador" value="@load(vm.bitacoraArchivoDTO.bitacoraArchivoVO.idEventoMapeador)" visible="false"></textbox>
		</div>
		<zscript>
			public void selectedValueEventoMapeador(){
				try{
					idEventoMapeador.setValue(eventoMapeador.getSelectedItem().getValue().toString());
				}catch(Exception ex){
					idEventoMapeador.setValue(null);
				}
			}
		</zscript>		
	</window>
</zk>